<h1>Rooms#show</h1>
<p>Find me in app/views/rooms/show.html.erb</p>
<div class="user-in">
<% @entries.each do |e| %>
    <h3><strong><a href="/users/<%= e.user.id %>"><%= e.user.email%></a></strong></h3>
    <%= image_tag e.user.image_url, size: "250x200" if e.user.image? %>
<% end %>
<p>2人のDM:heart:</p>
</div>


<div class="dmMain">
    <% @messages.each do |m| %>
        <strong><%= m.body %></strong>
        <small><%= m.user.email %>さん</small><hr>
        <%= image_tag m.user.image_url, size: "250x200" if m.user.image? %>
    <% end %>




    <%= form_for @message do |f| %>
    <%= f.text_field :body, :placeholder => "メッセージを入力して下さい" , :size => 100 %>
    <%= f.hidden_field :room_id, :value => @room.id %>
    <br>
    <%= f.submit "送信する" %>
    <% end %>
</div>


<%= link_to "video一覧に戻る", videos_path %>
<%= link_to "photo一覧に戻る", photos_path %>
<%= link_to "event一覧に戻る", events_path %>


<style>
.user-in{
    text-align:center;
    border:1px solid darkgray;
    background-color:gainsboro;
}
.dmMain{
    padding:30px;
    border:1px solid darkgray;
    background-color:gainsboro;
}
</style>