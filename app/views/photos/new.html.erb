<h1>アイドル投稿ページ</h1>
<h3>新規投稿ページ</h3>
<%= form_for @photo do |f| %>

    <div class="field">
    <%= f.label :写真 %>
    <%= f.file_field :image %>
  </div>

    <div class="field">
        <%= f.label :グループ名 %>
        <%= f.text_field :group, :size => 30 %>
    </div>

    <div class="field">
        <%= f.label :アイドルの名前 %>
        <%= f.text_field :name, :size => 30 %>
    </div>

    <div class="field">
        <%= f.label :コメント  %>
        <%= f.text_area :about, :size => "30x2" %>
    </div>

        <%= f.submit "投稿する" %>

<% end %>

<%= link_to "一覧に戻る", photos_path %>